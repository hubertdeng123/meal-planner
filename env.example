# Backend Configuration
DATABASE_URL=postgresql://user:password@localhost/meal_planner
# LLM Provider Configuration
# LLM_PROVIDER options: auto | grok | together
# In auto mode, Grok is preferred when GROK_API_KEY is present.
LLM_PROVIDER=auto
GROK_API_KEY=your-grok-api-key-here
GROK_MODEL=grok-4-1-fast-reasoning
GROK_BASE_URL=https://api.x.ai/v1
TOGETHER_API_KEY=your-together-api-key-here
TOGETHER_MODEL=moonshotai/Kimi-K2.5
TOGETHER_BASE_URL=https://api.together.xyz/v1
JWT_SECRET_KEY=your-super-secret-jwt-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
RECIPE_MAX_TOKENS=8192
RECIPE_STREAM_MAX_ATTEMPTS=1

# Frontend Configuration
VITE_API_URL=http://localhost:8000
VITE_RECIPE_GENERATION_TIMEOUT_MS=240000

# Development Settings
NODE_ENV=development
PYTHONPATH=./backend

# PostgreSQL Connection (for direct DB access)
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=password
PGDATABASE=meal_planner

# Email Settings for Weekly Reminders
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
FROM_EMAIL=noreply@hungry-helper.com
FROM_NAME=Hungry Helper

# Application Settings
APP_NAME=Hungry Helper
APP_VERSION=1.0.0
API_PREFIX=/api/v1
BASE_URL=http://localhost:3000

# Error Tracking (optional)
SENTRY_DSN=your-sentry-dsn-here
